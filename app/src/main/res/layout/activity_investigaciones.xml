<?xml version="1.0" encoding="utf-8"?>
<!--suppress XmlUnusedNamespaceDeclaration -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.InvestigacionesActivity"
    android:fitsSystemWindows="true">
    <!--tools:openDrawer="start"-->


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="31dp">

        <TextView
            android:text="No se encontraron Resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/searchMessage" android:visibility="gone"
            android:gravity="center"/>

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp">

        </SearchView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_Investigaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>

