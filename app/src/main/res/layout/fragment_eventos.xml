<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EventosFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cafe_ciec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="@+id/cafe_ciec"
        app:layout_constraintEnd_toEndOf="@+id/cafe_ciec"
        app:layout_constraintStart_toStartOf="@+id/cafe_ciec"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminateTint="@color/background_footer"/>

</android.support.constraint.ConstraintLayout>